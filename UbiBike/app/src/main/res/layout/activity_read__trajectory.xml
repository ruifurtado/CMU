<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ulisboa.tecnico.cmov.ubibike.Read_Trajectory">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StartingPoint: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/startingPoint"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EndPoint:"
        android:layout_height="wrap_content"
        android:id="@+id/endPoint"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/startingPoint"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Distance:"
        android:layout_height="wrap_content"
        android:id="@+id/distance"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/endPoint"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date:"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/distance"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/sPoint"
        android:layout_alignBottom="@+id/startingPoint"
        android:layout_alignStart="@+id/ePoint"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/ePoint"
        android:layout_alignTop="@+id/endPoint"
        android:layout_toEndOf="@+id/startingPoint"
        android:layout_marginStart="56dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/dist"
        android:layout_alignBottom="@+id/distance"
        android:layout_alignStart="@+id/ePoint"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/date_front"
        android:layout_alignBottom="@+id/date"
        android:layout_alignStart="@+id/dist"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/trajectoryName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Consumed Time:"
        android:id="@+id/consumed_time"
        android:layout_below="@+id/date"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/cTime"
        android:textColor="#ff000000"
        android:layout_alignTop="@+id/consumed_time"
        android:layout_alignStart="@+id/date_front" />

    <fragment
        android:layout_width="1200dp"
        android:layout_height="300dp"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/mapsFragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>