<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.ulisboa.tecnico.cmov.ubibike.User_Home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hello, "
        android:id="@+id/welcome"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/my_points"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/username_presentation"
        android:layout_alignBaseline="@+id/welcome"
        android:layout_alignBottom="@+id/welcome"
        android:layout_toEndOf="@+id/welcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Points: "
        android:id="@+id/my_points"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/welcome"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:textColor="#060505" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trajectories"
        android:id="@+id/trajectory"
        android:layout_marginBottom="61dp"
        android:layout_alignBottom="@+id/send_points"
        android:layout_alignEnd="@+id/send_message"
        android:layout_alignStart="@+id/send_points" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Points "
        android:id="@+id/send_points"
        android:layout_above="@+id/booking_bike"
        android:layout_marginBottom="101dp"
        android:layout_alignEnd="@+id/send_message"
        android:layout_alignStart="@+id/send_message" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:id="@+id/send_message"
        android:layout_below="@+id/trajectory"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bike Booking"
        android:id="@+id/booking_bike"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/send_message"
        android:layout_marginBottom="40dp"
        android:layout_alignEnd="@+id/send_message" />

</RelativeLayout>
